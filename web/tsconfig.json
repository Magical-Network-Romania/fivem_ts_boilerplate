{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"module": "ES2022",
		"target": "ES2022",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],

		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",

		"baseUrl": ".",
		"paths": {
			"@common/*": ["../src/common/*"],
			"~/*": ["src/*"]
		}
	},
	"include": ["src"],
	"references": [{ "path": "tsconfig.node.json" }]
}
