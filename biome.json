{
	"root": true,
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"files": { "includes": ["**"], "ignoreUnknown": true },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noUselessStringConcat": "error",
				"useSimplifiedLogicExpression": "warn",
				"useWhile": "warn"
			},
			"nursery": {
				"noAwaitInLoop": "warn",
				"noBitwiseOperators": "info",
				"noConstantBinaryExpression": "info",
				"noFloatingPromises": "warn",
				"noImplicitCoercion": "warn",
				"noImportCycles": "warn",
				"noMagicNumbers": "warn",
				"noMisusedPromises": "warn",
				"noNoninteractiveElementInteractions": "warn",
				"noProcessGlobal": "error",
				"noSecrets": "error",
				"noShadow": "error",
				"noUnassignedVariables": "info",
				"useAdjacentGetterSetter": "error",
				"useExhaustiveSwitchCases": "warn",
				"useJsonImportAttribute": "error",
				"useReadonlyClassProperties": "error",
				"useSingleJsDocAsterisk": "warn",
				"useUnifiedTypeSignature": "error"
			},
			"performance": {
				"noBarrelFile": "error",
				"noDelete": "error",
				"noNamespaceImport": "error",
				"noReExportAll": "error",
				"useTopLevelRegex": "error"
			},
			"security": {
				"noGlobalEval": "error"
			},
			"style": {
				"noCommonJs": "error",
				"noEnum": "error",
				"noExportedImports": "info",
				"noInferrableTypes": "warn",
				"noNamespace": "error",
				"noNegationElse": "info",
				"noNestedTernary": "error",
				"noNonNullAssertion": "error",
				"noParameterAssign": {
					"level": "error",
					"options": {
						"propertyAssignment": "deny"
					}
				},
				"noParameterProperties": "error",
				"noSubstr": "warn",
				"noUnusedTemplateLiteral": "error",
				"noUselessElse": "error",
				"noYodaExpression": "error",
				"useAsConstAssertion": "info",
				"useAtIndex": "info",
				"useCollapsedElseIf": "error",
				"useCollapsedIf": "error",
				"useConsistentBuiltinInstantiation": "error",
				"useConst": "error",
				"useDefaultParameterLast": "error",
				"useDefaultSwitchClause": "error",
				"useExplicitLengthCheck": "warn",
				"useExponentiationOperator": "warn",
				"useExportType": "warn",
				"useForOf": "warn",
				"useNumberNamespace": "error",
				"useShorthandAssign": "warn",
				"useShorthandFunctionType": "warn",
				"useSingleVarDeclarator": "warn",
				"useTemplate": "error",
				"useThrowNewError": "error",
				"useTrimStartEnd": "error"
			},
			"suspicious": {
				"noAlert": "warn",
				"noConfusingLabels": "error",
				"noConfusingVoidType": "error",
				"noEmptyBlockStatements": "warn",
				"noEvolvingTypes": "error",
				"noExplicitAny": "error",
				"noGlobalIsNan": "error",
				"noIrregularWhitespace": "error",
				"noVar": "error",
				"useAwait": "error",
				"useErrorMessage": "error"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineEnding": "crlf",
		"lineWidth": 140,
		"attributePosition": "multiline",
		"bracketSpacing": true,
		"expand": "auto",
		"useEditorconfig": true
	},
	"javascript": {
		"linter": {
			"enabled": true
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": false,
			"jsxEverywhere": false
		},
		"formatter": {
			"enabled": true,
			"quoteStyle": "double",
			"quoteProperties": "asNeeded",
			"trailingCommas": "none",
			"semicolons": "always",
			"arrowParentheses": "always",
			"indentStyle": "tab",
			"indentWidth": 4,
			"lineEnding": "crlf",
			"lineWidth": 140,
			"bracketSpacing": true,
			"expand": "auto"
		}
	},
	"json": {
		"linter": {
			"enabled": true
		},
		"parser": {
			"allowComments": true,
			"allowTrailingCommas": false
		},
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 4,
			"lineEnding": "crlf",
			"lineWidth": 140,
			"trailingCommas": "none",
			"bracketSpacing": true,
			"expand": "auto"
		}
	}
}
